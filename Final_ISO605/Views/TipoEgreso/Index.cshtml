@model IEnumerable<Final_ISO605.Core.TipoEgreso>

@{
    ViewData["Title"] ="Tipos de Egresos";
}

<h3>@ViewData["Title"]</h3>
<hr/>
<form>
<button asp-action="CreateOrEdit" asp-controller="TipoEgreso" class="btn btn-primary mb-3">Crear Tipo de Egreso</button>
<table class="table tabletable-responsive table-bordered table-hover">
    <thead>
        <tr class="table-active">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Accion
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            @foreach (var tipoEgreso in Model)
            {
                <tr>
                    <td>@tipoEgreso.ID</td>
                    <td>@tipoEgreso.Descripcion</td>
                    <td>@tipoEgreso.Estado</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-controller="TipoEgreso" asp-action="CreateOrEdit" asp-route-id="@tipoEgreso.ID" class="btn btn-success">Editar</a>
                            <a asp-controller="TipoEgreso" asp-action="Delete" asp-route-id="@tipoEgreso.ID" class="btn btn-danger">Borrar</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">
                    <div>
                        No hay Tipos de Egresos.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>