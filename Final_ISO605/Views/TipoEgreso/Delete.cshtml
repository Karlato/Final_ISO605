@model Final_ISO605.Core.TipoEgreso

@{
    ViewData["Title"] = "Borrar Tipo de Egreso";
}

<form method="post" action="Delete">
    <div class="card">
        <div class="card-header bg-info">
            <h2 class="text-center">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="ID" />
            <div class="form-floating mb-2">
                <input asp-for="Descripcion" class="form-control" readonly />
                <label asp-for="Descripcion"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Estado" class="form-control" readonly />
                <label asp-for="Estado"></label>
            </div>
            <div>
                <dvi class="col-lg-12 d-grid">
                    <button type="submit" class="btn btn-danger">Borrar</button>
                </dvi>
            </div>
        </div>
    </div>
</form>