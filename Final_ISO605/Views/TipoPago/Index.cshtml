@model IEnumerable<Final_ISO605.Core.TipoPago>

@{
    ViewData["Title"] = "Tipos de Pagos";
}

<h3>@ViewData["Title"]</h3>
<hr />
<form>
    <button asp-action="CreateOrEdit" asp-controller="TipoPago" class="btn btn-primary mb-3">Crear Tipo de Pago</button>
    <table class="table tabletable-responsive table-bordered table-hover">
        <thead>
            <tr class="table-active">
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    Accion
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var tipoPago in Model)
                {
                    <tr>
                        <td>@tipoPago.ID</td>
                        <td>@tipoPago.Descripcion</td>
                        <td>@tipoPago.Estado</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="TipoPago" asp-action="CreateOrEdit" asp-route-id="@tipoPago.ID" class="btn btn-success">Editar</a>
                                <a asp-controller="TipoPago" asp-action="Delete" asp-route-id="@tipoPago.ID" class="btn btn-danger">Borrar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div>
                            No hay Tipos de Pagos.
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>